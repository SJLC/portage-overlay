<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<herd>pda</herd>
	<longdescription lang="en">
		libgpod is a shared library to access the contents of an iPod. This
		library is based on code used in the gtkpod project.
	</longdescription>
	<use>
		<flag name="gtk">Enable ArtworkDB support (gtk2 only)</flag>
		<flag name="ios">Enable libimobiledevice for iOS devices</flag>
	</use>
	<upstream>
		<remote-id type="github">VCTLabs/libgpod</remote-id>
	</upstream>
</pkgmetadata>
